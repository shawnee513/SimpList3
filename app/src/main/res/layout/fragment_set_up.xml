<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:padding="32dp"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".SetUpFragment">

    <Button
        android:id="@+id/setUp_bt_storeSetUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Set Up Store" />

    <Button
        android:id="@+id/setUp_bt_houseSetUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Set Up House" />

    <Button
        android:id="@+id/setUp_bt_itemSetUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Set Up Items" />

</LinearLayout>